<div class="row">
	<div class="span6">
		<h2>Sign in</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :remember_me, as: :boolean %>

		  <div class="form-actions">
		    <%= f.submit "Sign in", class: "btn btn-primary" %>
		  </div>
		  <div class="row">
        <button class="btn btn-facebook"><i class="icon-facebook"></i> | Connect with Facebook</button>
        <button class="btn btn-twitter"><i class="icon-twitter"></i> | Connect with Twitter</button>
        <button class="btn btn-google-plus"><i class="icon-google-plus"></i> | Connect with Google+</button>
      </div>
		<% end %>
	</div>
</div>