<div class="row">
  <div class="span3">
    <%= render 'queries/sidebar' %>
  </div>
  <div class="span9">
    <h1>Listing <%= current_user.name %>'s queries</h1>

    <div class="tabbable"> <!-- Only required for left/right tabs -->
      <ul class="nav nav-tabs">
        <% queries = current_user.queries %>
        <% queries.each_with_index do |query, index| %>
          <li <% if query==@query %>class="active"<% end %> ><%= link_to "Channel #{index+1}", query  %></li>
        <% end %>
        <li><%= link_to "+ Add Channel", new_query_path %></li>
      </ul>
      <div class="tab-content">
        <% queries.each_with_index do |query, index| %>
          <% if query==@query %>
            <div class="tab-pane active" id="tab<%= index+1 %>">
              <%= render query %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
